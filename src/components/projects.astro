<section
  id="projects"
  class="py-12 border-t border-[#ffffff10] text-[var(--white)]"
>
  <div class="max-w-5xl mx-auto">
    <h2 class="text-lg text-[var(--sec)] mb-2 shiny-sec">My work</h2>
    <h3 class="text-4xl md:text-5xl font-medium mb-8">Projects</h3>

    <div class="space-y-6">
      {
        projects.map((project) => (
          <div class="p-6 border border-gray-700 rounded-lg shadow-md bg-[#121212] flex flex-col md:flex-row items-start relative">
            {/* Left column */}
            <div class="md:w-1/3 w-full flex flex-col items-center text-center md:text-left md:items-start">
              {/* Icon */}
              <div class="p-3 bg-gray-800 rounded-full mb-3">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 24 24"
                  fill="currentColor"
                  class="size-12 text-[var(--sec)]"
                >
                  <path d={project.icon} />
                </svg>
              </div>
              {/* Title */}
              <h4 class="text-xl font-semibold">{project.title}</h4>
              {project.status && (
                <span class="text-sm text-gray-400">{project.status}</span>
              )}
              {/* Technologies */}
              {project.technologies && (
                <div class="mt-3 flex flex-wrap gap-2">
                  {project.technologies.map((tech) => (
                    <span class="px-3 py-1 text-sm bg-gray-700 text-gray-200 rounded-lg">
                      {tech}
                    </span>
                  ))}
                </div>
              )}
            </div>

            {/* Right column */}
            <div class="md:w-2/3 w-full flex flex-col">
              {/* Description */}
              <div class="flex-grow min-h-[100px]">
                {project.description && (
                  <p class="text-gray-300 md:pr-20 whitespace-pre-line">
                    {project.description}
                  </p>
                )}
              </div>

              {/* Links */}
              <div class="absolute bottom-6 right-6 flex gap-4 justify-end">
                {project.link && (
                  <a
                    target="_blank"
                    href={project.link}
                    class="size-14 flex justify-center items-center text-[var(--white-icon)] hover:text-white transition duration-300 ease-in-out border border-1 border-[var(--white-icon-tr)] p-3 rounded-xl bg-[#1414149c] hover:bg-[var(--white-icon-tr)]"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      viewBox="0 0 24 24"
                      fill="currentColor"
                      class="size-7"
